{
    "openapi": "3.0.2",
    "info": {
        "title": "Financial Portal API",
        "description": "Documentation for the financial portal API",
        "version": "1.0.0",
        "contact": {
            "email": "danrsaquetti@gmail.com",
            "name": "Dan Ruan"
        }
    },
    "servers": [
        {
            "url": "http://localhost:8080/customer"
        }
    ],
    "tags": [
        {
            "name": "Auth"
        }
    ],
    "components": {
        "schemas": {
            "Result": {
                "type": "object",
                "properties": {
                    "ok": {
                        "type": "boolean"
                    },
                    "status": {
                        "type": "number"
                    },
                    "value": {
                        "type": "object",
                        "nullable": true
                    },
                    "error": {
                        "type": "object",
                        "nullable": true,
                        "properties": {
                            "title": {
                                "type": "string"
                            },
                            "message": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string",
                                "nullable": true
                            },
                            "stack": {
                                "type": "string",
                                "nullable": true
                            },
                            "causes": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "cause": {
                                            "type": "string",
                                            "nullable": true
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "PeopleType": {
                "type": "string",
                "enum": [
                    "NATURAL_PERSON",
                    "LEGAL_ENTITY"
                ]
            },
            "Gender": {
                "type": "string",
                "enum": [
                    "MASCULINE",
                    "FEMININE"
                ]
            },
            "People": {
                "type": "object",
                "properties": {
                    "type": {
                        "$ref": "#/components/schemas/PeopleType"
                    }
                }
            }
        },
        "responses": {
            "400": {
                "description": "There was an error in the operation",
                "content": {
                    "application/json": {
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/components/schemas/Result"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "value": {
                                            "nullable": true,
                                            "default": null,
                                            "example": null
                                        },
                                        "error": {
                                            "nullable": false
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            },
            "500": {
                "description": "Server internal error",
                "content": {
                    "application/json": {
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/components/schemas/Result"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "value": {
                                            "nullable": true,
                                            "default": null,
                                            "example": null
                                        },
                                        "error": {
                                            "nullable": false
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        }
    },
    "paths": {
        "/customer/auth/customer/sign-up": {
            "post": {
                "description": "Create a customer account",
                "tags": [
                    "Auth"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "type": {
                                        "$ref": "#/components/schemas/PeopleType",
                                        "default": "NATURAL_PERSON"
                                    },
                                    "login": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "itinCnpj": {
                                        "type": "string"
                                    },
                                    "gender": {
                                        "$ref": "#/components/schemas/Gender"
                                    },
                                    "dateOfBirth": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "name",
                                    "login",
                                    "password",
                                    "itinCnpj",
                                    "gender"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/Result"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "status": {
                                                    "type": "number",
                                                    "default": 201
                                                },
                                                "value": {
                                                    "type": "object",
                                                    "properties": {
                                                        "message": {
                                                            "type": "string",
                                                            "default": "Register user successfully"
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/400"
                    },
                    "500": {
                        "$ref": "#/components/responses/500"
                    }
                }
            }
        },
        "/customer/auth/customer/sign-in": {
            "post": {
                "description": "Sign in to the customer account",
                "tags": [
                    "Auth"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "login": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "login",
                                    "password"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Signed",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/Result"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "status": {
                                                    "type": "number",
                                                    "default": 200
                                                },
                                                "value": {
                                                    "type": "object",
                                                    "properties": {
                                                        "token": {
                                                            "type": "string",
                                                            "description": "JWT Token"
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/400"
                    },
                    "500": {
                        "$ref": "#/components/responses/500"
                    }
                }
            }
        }
    }
}